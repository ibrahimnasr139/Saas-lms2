  "AllowedHosts": "*",
  "JwtOptions": {
    "Issuer": "https://api.waey.online",
    "Audience": "https://waey.online",
    "ExpiryMinutes": 60

  },
  "MailOptions": {
    "SmtpServer": "smtp.gmail.com",
    "Port": 587,
    "Email": "saaslms129@gmail.com"
  },
  "BunnyOptions": {
    "StorageZoneName": "saas-lms-test",
