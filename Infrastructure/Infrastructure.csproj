<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Templates\OtpTemplate.html" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Templates\ForgetPasswordTemplate.html">
